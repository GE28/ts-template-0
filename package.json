{
  "name": "patterns",
  "version": "0.0.1",
  "description": "TypeScript project from scratch using Babel, Jest, ESLint and Prettier",
  "main": "src/index.ts",
  "author": "GE28",
  "repository": "github:GE28/ts-template-0",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "tsc && yarn run build:only",
    "build:only": "babel src --out-dir lib --extensions \".ts\"",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "format": "prettier --config .prettierrc src/**/*.ts --write",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint-fix": "eslint src/**/*.ts --ext .ts --fix",
    "test": "jest"
  }
}
