{
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDirs": ["src", "tests"],
    "outDir": "out",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowUnreachableCode": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
